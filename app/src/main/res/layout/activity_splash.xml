<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".splash.AcceuilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"

            android:src="@drawable/splash2" />


        <TextView
            android:id="@+id/txt_insert_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="Bienvenue à\n Inventaire stock"
            android:textColor="@color/white"
            android:textSize="30dp"

            />


        <TextView
            android:id="@+id/txt_delete_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:padding="30dp"
            android:text="“ Un inventaire bien géré est le trésor caché de toute entreprise,  \nSoyez organisé(e) en toute simplicité. “"
            android:textColor="@color/gris_claire"
            android:textSize="18dp"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/effet_gris">

            <TextView

                android:id="@+id/txt_valider"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/effet_white"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="S'authentifier"
                android:textColor="@color/background"
                android:textSize="15dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/txt_params"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="Paramètrage"

                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_indication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_bold"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:text="MobileTeam"
            android:textColor="@color/themeRed"
            android:textSize="15dp" />


    </LinearLayout>

</RelativeLayout>